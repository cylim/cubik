generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextIndex", "fullTextSearch", "driverAdapters"]
}

datasource db {
  provider     = "mysql"
  url          = env("METADATA_DATABASE_URL")
  relationMode = "prisma"
}

model Metadata {
  id       String       @id // account pda
  type     MetadataType
  metadata Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum MetadataType {
  User
  Project
  Account
}
